<% layout('/layout/boilerplate') %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <form action="/login" method="post" novalidate class="needs-validation">

      <!--username -->
      <label for="username" class="form-label">Username</label>
      <input type="text" class="form-control" name="username" id="username" required>
      <div class="invalid-feedback">Enter valid username</div>

      <!-- password -->
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control" name="password" id="password" required>
      <div class="invalid-feedback">Enter valid password</div>
       

      <button type="submit" class="mt-2 btn btn-success">Login</button>
    </form>
  </div>
</div>
