<% layout('layout/boilerplate') %>


<div id="filters" class="ms-3">

  <a href="/search/filter/Trending" class="filter">
    <div><i class="fa-solid fa-fire-flame-curved"></i></div>
    <p>Trending</p>
  </a>

  <a href="/search/filter/Rooms" class="filter">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </a>

  <a href="/search/filter/Mountains" class="filter">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Mountain-city</p>
  </a>

  <a href="/search/filter/Iconic-cities" class="filter">
    <div><i class="fa-solid fa-city"></i></div>
    <p>Iconic-cities</p>
  </a>

  <a href="/search/filter/Beaches" class="filter">
    <div><i class="fa-solid fa-umbrella-beach"></i></div>
    <p>Beach</p>
  </a>

  <a href="/search/filter/Castles" class="filter">
    <div><i class="fa-solid fa-chess-rook"></i></div>
    <p>Castles</p>
  </a>

  <a href="/search/filter/Pools" class="filter">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Pools</p>
  </a>

  <a href="/search/filter/Camping" class="filter">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>Camping</p>
  </a>

  <a href="/search/filter/Lakes" class="filter">
    <div><i class="fa-solid fa-water"></i></div>
    <p>Lakes</p>
  </a>

  <a href="/search/filter/Worship" class="filter">
    <div><i class="fa-solid fa-place-of-worship"></i></div>
    <p>Worship</p>
  </a>

  <a href="/search/filter/Snowland" class="filter">
    <div><i class="fa-solid fa-snowflake"></i></div>
    <p>Snowland</p>
  </a>

  <a href="/search/filter/Forest" class="filter">
    <div><i class="fa-solid fa-tree"></i></div>
    <p>Forest</p>
  </a>

  <a href="/search/filter/Farms" class="filter">
    <div><i class="fa-solid fa-cow"></i></div>
    <p>Farm</p>
  </a>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display Tax</label>
    </div>
  </div>

</div>

  <div class="row" id="cards">
    <% for(let listing of listings) { %>
      <a href="/listing/<%=listing._id%>" class="listing-link" />
      <div class="card" style="width: 24rem; height: 29rem; ">
        <img src="<%=listing.image.url%>" class="card-img-top" alt="Listing_img" style = "height: 18rem;" />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%=listing.title%></b><br/>
            <i style="font-size: 0.85rem;"><%=listing.description%></i><br/>
            <b>&#8377;<%= listing.price ? listing.price.toLocaleString('en-IN') : 'N/A' %></b>/night <i class="tax">&nbsp;+ 18% GST</i>
          </p>
        </div>
      </div>
      </a>
      <% } %>
  </div>

  <script>
  
    let taxSwitch = document.getElementById('flexSwitchCheckDefault');
    taxSwitch.addEventListener('click', () => {
      let tax = document.getElementsByClassName('tax');
      
      for(tax of tax){
        if( tax.style.display != "inline"){
        tax.style.display = "inline";
      }else{
        tax.style.display = "none";
      }
    }
    });
    
  </script>
